<project
    default="createcomposite"
    basedir=".">
  <!--
  A "manual" task that should only have to be ran once
  With something like
  ./antRunner add-composite-epp-packages.xml
  -->
    <target
        name="createcomposite">
        <p2.composite.repository>
            <repository
                location="file://${REPO_ROOT}/releases/${release}/"
                name="Mars repository"/>
            <add>
                <repository
                    location="http://download.eclipse.org/technology/epp/packages/${release}/" />
            </add>
        </p2.composite.repository>
    </target>
</project>

